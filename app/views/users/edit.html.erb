<h1>Edit Your profile page</h1>

<%= form_for @user do |f| %>

	<div>
    <%= image_tag "placeholder.png" %>
    <%= f.file_field :avatar %>
  </div>

   <div><%= f.label :username %><br />
  <%= f.text_field :username%></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email%></div>

   <div><%= f.label :first_name %><br />
    <%= f.text_field :fname %></div>
  <div><%= f.label :last_name %><br />
    <%= f.text_field :lname %></div>
  <div><%= f.label :location %><br />
    <%= f.text_field :location %></div>
    <div><%= f.label :github_link %></br>
    <%= f.url_field :github_link %></div>
  <div><%= f.submit "Update" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account",data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

<h1>This page will allow you to edit your profile!</h1>
